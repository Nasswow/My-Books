extends layout


block content
    h1 #{title}
    form(method= 'POST', action= '/add')
        #form-group
            lable Title:
            input.form-control(name= 'title', type= 'text') 
        #form-group
            lable Author:
            input.form-control(name= 'author', type= 'text')
        #form-group
            lable Body:
            textarea.form-control(name= 'body' rows="5")
        input.btn.btn-primary(type= 'submit', value= 'Submit')