extends layout


block content
    form.form-signin(method= 'POST', action= '/')
        h1.h3.mb-3.font-weight-normal Please sign in
        label.sr-only(for='inputEmail') Email address
        input.form-control(type='text', name= 'name' placeholder='Full name', required='', autofocus='')
        label.sr-only(for='inputPassword') Password
        input.form-control(type='password', name= 'password' placeholder='Password', required='')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in